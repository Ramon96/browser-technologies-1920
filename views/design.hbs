<h1>{{title}}</h1>
{{!-- T-shirt preview --}}
<div id="wrapper">
    <aside>
        <section id="shirt">
            <h2>Preview</h2>
            <img id="previewimage" src="/images/shirtWhite.png" alt="Shirt preview" width="400"
                height="400">
            <p id="previewtext">My chosen text</p>
        </section>
    </aside>
    <main>
        <section>
            <h2>Make your design</h2>
            <form id="shirtdesign" method="GET">
                <fieldset>
                  
                        <legend><label for="shirttext">Shirt text</label></legend>
                    
                    <input placeholder="My chosen text" type="text" id="shirttext" required name="shirttext" {{#if res.shirttext}} value={{res.shirttext}} {{/if}}>
                </fieldset>
                <fieldset>
                    <legend>Size</legend>
                    <input type="radio" required name="size" id="small" value="small" {{#ifeq res.size 'small'}}
                        checked="checked" {{/ifeq}}>
                    <label class="size" for="small"> S </label>

                    <input type="radio" name="size" id="medium" value="medium" {{#ifeq res.size 'medium'}}
                        checked="checked" {{/ifeq}}>
                    <label class="size" for="medium"> M </label>

                    <input type="radio" name="size" id="large" value="large" {{#ifeq res.size 'large'}}
                        checked="checked" {{/ifeq}}>
                    <label class="size" for="large"> L</label>

                    <input type="radio" name="size" id="xl" value="xl" {{#ifeq res.size 'xl'}} checked="checked"
                        {{/ifeq}}>
                    <label class="size" for="xl"> XL</label>
                </fieldset>
                <fieldset>
                    <legend>Shirt Color</legend>
                    <input type="radio" required name="color" id="white" value="white" {{#ifeq res.color 'white'}}
                        checked="checked" {{/ifeq}}>
                    <label title="White" class="color" for="white"></label>

                    <input type="radio" name="color" id="black" value="black" {{#ifeq res.color 'black'}}
                        checked="checked" {{/ifeq}}>
                    <label title="Black" class="color" for="black"></label>

                    <input required type="radio" name="color" id="red" value="red" {{#ifeq res.color 'red'}}
                        checked="checked" {{/ifeq}}>
                    <label title="Red" class="color" for="red"></label>

                    <input type="radio" name="color" id="blue" value="blue" {{#ifeq res.color 'blue'}} checked="checked"
                        {{/ifeq}}>
                    <label title="Blue" class="color" for="blue"></label>

                    <input type="radio" name="color" id="green" value="green" {{#ifeq res.color 'green'}}
                        checked="checked" {{/ifeq}}>
                    <label title="Green" class="color" for="green"></label>

                    <input type="radio" name="color" id="orange" value="orange" {{#ifeq res.color 'orange'}}
                        checked="checked" {{/ifeq}}>
                    <label title="Orange" class="color" for="orange"></label>

                    <input type="radio" name="color" id="pink" value="pink" {{#ifeq res.color 'pink'}} checked="checked"
                        {{/ifeq}}>
                    <label title="Pink" class="color" for="pink"></label>

                    <input type="radio" name="color" id="turquoise" value="turquoise" {{#ifeq res.color 'turquoise'}}
                        checked="checked" {{/ifeq}}>
                    <label title="Turquoise" class="color" for="turquoise"></label>

                    <input type="radio" name="color" id="yellow" value="yellow" {{#ifeq res.color 'yellow'}}
                        checked="checked" {{/ifeq}}>
                    <label title="Yellow" class="color" for="yellow"></label>
                </fieldset>
                <fieldset>
                    
                        <legend><label for="font">Text style</label></legend>
                    
                    <select required id="font" name="font">
                        <option value="" disabled selected="selected">Choose your text style</option>
                        <option class="Sans" {{#ifeq res.font 'Sans'}} selected {{/ifeq}} value="Sans">Source Sans Pro
                        </option>
                        <option class="Indie" {{#ifeq res.font 'Indie'}} selected {{/ifeq}} value="Indie">Indie Flower
                        </option>
                        <option class="Code" {{#ifeq res.font 'Code'}} selected {{/ifeq}} value="Code">Source Code Pro
                        </option>
                        <option class="Satisfy" {{#ifeq res.font 'Satisfy'}} selected {{/ifeq}} value="Satisfy">Satisfy
                        </option>
                        <option class="Spartan" {{#ifeq res.font 'Spartan'}} selected {{/ifeq}} value="Spartan">Spartan
                        </option>
                        <option class="Orbitron" {{#ifeq res.font 'Orbitron'}} selected {{/ifeq}} value="Orbitron">
                            Orbitron</option>
                        <option class="Poiret" {{#ifeq res.font 'Poiret'}} selected {{/ifeq}} value="Poiret">Poiret One
                        </option>
                        <option class="Start" {{#ifeq res.font 'Start'}} selected {{/ifeq}} value="Start">Press Start 2P
                        </option>
                    </select>
                </fieldset>
                <fieldset>
                    <legend>Text color</legend>
                    <input type="radio" required name="fontcol" id="blacktxt" value="black" checked="checked"
                        {{#ifeq res.fontcol 'white'}} checked="unchecked" {{/ifeq}}>
                    <label title="Black" class="fontcol" for="blacktxt"></label>

                    <input type="radio" name="fontcol" id="whitetxt" value="white" {{#ifeq res.fontcol 'white'}}
                        checked="checked" {{/ifeq}}>
                    <label title="White" class="fontcol" for="whitetxt"></label>
                </fieldset>

                <button id="save" formnovalidate formaction="/save" type="submit" name="state"
                    value="save">save</button>
                <button formaction="/final" type="submit">Next step</button>

            </form>
        </section>
    </main>
</div>